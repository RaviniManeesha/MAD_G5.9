<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:backgroundTintMode="add"
    android:textAlignment="center"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="409dp"
                android:layout_height="654dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="75dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout15"
                    android:layout_width="404dp"
                    android:layout_height="436dp"
                    android:background="#81FFFFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.366">

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="335dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="385dp"
                        android:fontFamily="@font/aclonica"
                        android:text="Module Name"
                        android:textAlignment="center"
                        android:textColor="#0C0C0C"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="207dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="95dp"
                        android:layout_marginEnd="178dp"
                        android:layout_marginBottom="301dp"
                        android:fontFamily="@font/aclonica"
                        android:text="Final Result"
                        android:textColor="#101010"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="207dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="199dp"
                        android:layout_marginEnd="174dp"
                        android:layout_marginBottom="197dp"
                        android:fontFamily="@font/aclonica"
                        android:text="No of Credits"
                        android:textColor="#101010"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="276dp"
                        android:layout_marginTop="93dp"
                        android:layout_marginEnd="41dp"
                        android:layout_marginBottom="295dp"
                        android:backgroundTint="#FFFFFF" />

                    <Button
                        android:id="@+id/button11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="279dp"
                        android:layout_marginTop="199dp"
                        android:layout_marginEnd="38dp"
                        android:layout_marginBottom="189dp"
                        android:backgroundTint="#FFFFFF" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="85dp"
                        android:layout_marginTop="343dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="61dp"
                        android:fontFamily="@font/aclonica"
                        android:text="Add more Modules"
                        android:textColor="#0E0E0E"
                        android:textSize="24sp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/floatingActionButton7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="326dp"
                        android:layout_marginEnd="331dp"
                        android:layout_marginBottom="54dp"
                        android:backgroundTint="#081351"
                        android:clickable="true"
                        app:srcCompat="@android:drawable/ic_menu_add" />
                </RelativeLayout>

                <Button
                    android:id="@+id/button7"
                    android:layout_width="242dp"
                    android:layout_height="64dp"
                    android:backgroundTint="#140FD3"
                    android:fontFamily="@font/aclonica"
                    android:text="Calculate GPA"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout15" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="400dp"
                android:layout_height="56dp"
                android:fontFamily="@font/aclonica"
                android:text="GPA Calculation"
                android:textAlignment="center"
                android:textColor="#090909"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.454"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>